<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/coffee</item>
        <item name="colorPrimaryDark">@color/coffee</item>
        <item name="android:navigationBarColor" tools:targetApi="lollipop">@color/coffee</item>
        <item name="android:windowBackground">@color/white</item>
        <item name="android:textColorPrimary">@color/white</item>
    </style>

    <!--默认使用该主题-->
    <style name="DefaultTheme" parent="AppTheme">

    </style>
    <style name="MainRadioButtonStyle">
        <item name="android:layout_marginTop">5dp</item>
        <!--<item name="android:textColor">@drawable/selector_main_rb_text</item>-->
        <item name="android:drawablePadding">2dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:textSize">@dimen/sp10</item>
        <item name="android:layout_weight">1</item>
        <item name="android:button">@null</item>
        <item name="android:gravity">center</item>
    </style>
</resources>
